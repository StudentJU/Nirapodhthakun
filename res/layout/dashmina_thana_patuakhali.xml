<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnNariSurokkha"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="18dp"
            android:background="@drawable/pink_button"
            android:text="@string/deauty_officer"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnDhakaDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/red_button"
            android:text="@string/oc_thana"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnKhulnaDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/blue_button"
            android:text="@string/si_thana"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnChittaongDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_button"
            android:text="@string/rab_on_deauty"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnRajshahiDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yellow_button"
            android:text="@string/mp_of_the_area"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnBorishalDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/purple_button"
            android:text="@string/ambulance_number"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSylhetDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/black_button"
            android:text="@string/fire_service"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnRangpurDivision"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="58sp"
            android:background="@drawable/golden_button"
            android:text="@string/govt_hospital"
            android:textSize="12sp" />
    </LinearLayout>

</ScrollView>