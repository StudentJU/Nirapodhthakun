<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/khulna_background" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnMeherpurDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/meherpur_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnNarailDitrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/norail_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnShatkhiraDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/shatkhira_district_name_in_bangla"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnJhedinaDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/jhenaidah_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnKhulnaDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/khulna_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnKustiaDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/kustia_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMaguraDitrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/magura_district_name_in_bangla"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnBagerhatDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/bagerhat_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnChuadangaDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/chuadanga_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnJessoreDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/khulna_rounded_corner_button"
            android:text="@string/jessore_district_name_in_bangla"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>