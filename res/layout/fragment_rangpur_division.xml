<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rangpurback" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPhancagorDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/panchagar_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnRongpurDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/rongpur_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnThakurgaonDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/thakurgaon_district_name_in_bangla"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnlalmonirhatDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/lalmonirhat_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnNilphamariDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/nilphamari_district_name_in_bangla"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnDinajpurDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/dinajpur_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnGaibandhaDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/gaibandha_district_name_in_bangla"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnKurigramDistrict"
            style="@style/ButtonText"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rangpur_rounded_corner_button_design"
            android:text="@string/kurigram_district_name_in_bangla"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>